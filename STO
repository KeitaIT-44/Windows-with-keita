# 1. Verberg Apache versie en foutmeldingen
sudo sed -i 's/^ServerTokens .*/ServerTokens Prod/' /etc/apache2/conf-available/security.conf
sudo sed -i 's/^ServerSignature .*/ServerSignature Off/' /etc/apache2/conf-available/security.conf

# 2. Verberg directory index (voorkomt dat bestanden in mappen zichtbaar zijn)
sudo sed -i '/<Directory \/var\/www\/>/,/<\/Directory>/ s/Options .*/Options -Indexes/' /etc/apache2/apache2.conf

# 3. Verberg SSH login-banner
sudo sed -i 's/^PrintMotd .*/PrintMotd no/' /etc/ssh/sshd_config
sudo sed -i 's/^#*Banner .*/Banner none/' /etc/ssh/sshd_config

# 4. Schakel Ubuntu login-berichten uit
sudo chmod -x /etc/update-motd.d/*

# 5. Herstart Apache en SSH om wijzigingen toe te passen
sudo systemctl restart apache2
sudo systemctl restart ssh
